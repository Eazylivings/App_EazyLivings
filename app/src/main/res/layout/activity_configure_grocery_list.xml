<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.eazylivings.activities.services.cooking.ConfigureGroceryList"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/configureGroceryList_backButton"
        android:onClick="onClickBackButton"
        android:layout_gravity="top|start"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/configureGroceryList_titleBar"
        android:layout_toStartOf="@+id/configureGroceryList_titleBar"
        android:src="@drawable/arrow_back"
        android:layout_marginRight="2dp" />

    <TextView
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:id="@+id/configureGroceryList_titleBar"
        android:background="#2E9AFE"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/configureGroceryList_homeButton"
        android:src="@drawable/home_icon"
        android:onClick="onClickHomeButton"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|end"
        android:layout_toRightOf="@+id/configureGroceryList_titleBar"
        android:layout_toEndOf="@+id/configureGroceryList_titleBar"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SKIP"
        android:id="@+id/configureGroceryList_skip"
        android:layout_marginTop="26dp"
        android:textColor="#FF0000"
        android:layout_below="@+id/configureGroceryList_homeButton"
        android:layout_alignLeft="@+id/configureGroceryList_homeButton"
        android:layout_alignStart="@+id/configureGroceryList_homeButton"
        android:onClick="onClickSkip" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scrollView"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/configureGroceryList_imageView_vegetables"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClickMainCategory"
            android:padding="2dp"
            android:layout_gravity="center"
            android:src="@drawable/vegetables" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vegetables"
            android:id="@+id/configureGroceryList_textView_vegetables"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickMainCategory"
            android:padding="5dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/configureGroceryList_imageView_fruits"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onClickMainCategory"
            android:padding="2dp"
            android:layout_gravity="center"
            android:src="@drawable/fruits" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fruits"
            android:id="@+id/configureGroceryList_textView_fruits"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickMainCategory"
            android:padding="5dp" />



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/configureGroceryList_imageView_wheatAndFlour"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClickMainCategory"
            android:padding="2dp"
            android:layout_gravity="center"
            android:src="@drawable/wheat_flour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wheat and Flour"
            android:id="@+id/configureGroceryList_textView_wheatAndFlour"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickMainCategory"
            android:padding="5dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/configureGroceryList_imageView_masaale"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClickMainCategory"
            android:padding="2dp"
            android:layout_gravity="center"
            android:src="@drawable/masale" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Masaale"
            android:id="@+id/configureGroceryList_textView_masaale"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickMainCategory"
            android:padding="5dp" />
    </GridLayout>

    </ScrollView>


</RelativeLayout>
