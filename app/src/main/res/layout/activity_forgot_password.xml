<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eazylivings.activities.login.ForgotPassword">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/forgotPassword_button_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forgotpassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="An email along with your password will be sent to your registerd Email Id."
        android:id="@+id/forgotPassword_button_defaultMessage"
        android:textAlignment="center"
        android:layout_marginTop="127dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:id="@+id/forgotPassword_button_emailAddress"
        android:gravity="center"
        android:layout_marginTop="46dp"
        android:textColor="#000000"
        android:hint="Email Address"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/forgotPassword_button_defaultMessage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="50dp"
        android:layout_width="360dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/forgotPassword_button_retrievePassword"
        android:onClick="onClickRetrievePassword"
        android:background="#2E9AFE"
        android:textColor="@drawable/button_text_color"
        android:layout_marginTop="40dp"
        android:text="Retrieve Password"
        android:textSize="18dp"
        android:layout_below="@+id/forgotPassword_button_emailAddress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:text="@string/new_user"
        android:id="@+id/forgotPassword_textView_newTo"
        android:onClick="onClickRegisterButton"
        android:textColor="#000000"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/forgotPassword_button_retrievePassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:gravity="center"
        android:text="@string/signup"
        android:id="@+id/forgotPassword_link_signUp"
        android:onClick="onClickRegisterButton"
        android:textColor="#FF0000"
        android:layout_below="@+id/forgotPassword_textView_newTo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="50dp"
        android:layout_width="360dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/forgotPassword_button_signIn"
        android:onClick="onSignInClick"
        android:background="#2E9AFE"
        android:textColor="@drawable/button_text_color"
        android:text="Sign In"
        android:textSize="18dp"
        android:layout_below="@+id/forgotPassword_button_emailAddress"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
